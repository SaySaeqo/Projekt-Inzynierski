<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".exhibit.ExhibitFragment"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:divider="@drawable/space"
        android:showDividers="middle">

        <pl.edu.pg.cloudlib.exhibit.GalleryWidgetView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/example_gallery"
            />

        <pl.edu.pg.cloudlib.exhibit.SectionWidgetView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/example_section"
            />

        <pl.edu.pg.cloudlib.exhibit.LinkWidgetView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/example_link"
            />

        <TextView
            android:id="@+id/example_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>